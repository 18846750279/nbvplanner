<launch>
  <arg name="mav_name" default="firefly" />
  <arg name="enable_logging" default="false" />
  <arg name="enable_ground_truth" default="true" />
  <arg name="log_file" default="$(arg mav_name)" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find nbvplanner)/worlds/flat.world" />
    <!-- <arg name="debug" value="true"/> -->
    <arg name="paused" value="true"/>
    <arg name="gui" value="true"/>
  </include>
  
  <node name="rviz" pkg="rviz" type="rviz" output="screen"/>

  <node name="nbvPlanner" pkg="nbvplanner" type="nbvPlanner" output="screen" required="true">
    <param name="tf_frame" type="string" value="world" />
    <param name="resolution" type="double" value="0.4" />
    <param name="visualize_max_z" type="double" value="2.5" />
    <param name="use_history" type="bool" value="true" />
    <param name="sensor_max_range" type="double" value="5.0" />
    <remap from="cam0/camera_info" to="/$(arg mav_name)/vi_sensor/left/camera_info"/>
    <remap from="cam1/camera_info" to="/$(arg mav_name)/vi_sensor/right/camera_info"/>
    <remap from="pointcloud0" to="$(arg mav_name)/vi_sensor/camera_depth/depth/points"/>
    <remap from="pose0" to="$(arg mav_name)/ground_truth/pose"/>
    <remap from="nbvplanner0" to="$(arg mav_name)/nbvplanner"/>
    <rosparam command="load" file="$(find nbvplanner)/resource/exploration.yaml" />
  </node>

  <include file="$(find nbvplanner)/launch/mav_inspector.launch">
    <arg name="mav_name" value="firefly" />
    <arg name="waypoint_x" value="0.0" />
    <arg name="waypoint_y" value="0.0" />
    <arg name="waypoint_z" value="1.0" />
    <arg name="param_file" value="$(find nbvplanner)/resource/exploration.yaml" />
    <arg name="enable_logging" value="$(arg enable_logging)" />
    <arg name="enable_ground_truth" value="$(arg enable_ground_truth)" />
    <arg name="log_file" value="$(arg log_file)" />
  </include>
  
</launch>
