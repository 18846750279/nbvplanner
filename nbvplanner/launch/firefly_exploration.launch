<launch>
  <arg name="mav_name" default="firefly"/>
  <arg name="enable_logging" default="false" />
  <arg name="enable_ground_truth" default="true" />
  <arg name="log_file" default="$(arg mav_name)" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find rotors_gazebo)/worlds/powerplant.world" />
    <!-- <arg name="debug" value="true"/> -->
    <arg name="paused" value="true"/>
    <arg name="gui" value="false"/>
  </include>
  
  <node pkg="tf" type="static_transform_publisher" name="link1_broadcaster" args="0 0 0 0 0 0 firefly/vi_sensor/ground_truth/firefly/vi_sensor/ground_truth/odometry_sensor_link fcu 1" />
  <node pkg="tf" type="static_transform_publisher" name="link2_broadcaster" args="0 0 0 -1.57 0 -1.57 fcu firefly/vi_sensor/camera_depth_optical_center_link 1" />
  
  <node name="rviz" pkg="rviz" type="rviz" output="screen"/>
  <node name="octomap_server" pkg="octomap_server" type="octomap_server_node" output="screen">
    <param name="frame_id" type="string" value="world" />
    <param name="resolution" type="double" value="5.0" />
    <param name="sensor_model/max_range" type="double" value="25.0" />
    <param name="latch" type="bool" value="false" />
    <remap from="cloud_in" to="firefly/vi_sensor/camera_depth/depth/points"/>
    <remap from="tf_static" to="tf"/>
  </node>
  <group ns="analysis">
    <node name="octomap_server_highres" pkg="octomap_server" type="octomap_server_node" output="screen">
      <param name="frame_id" type="string" value="world" />
      <param name="resolution" type="double" value="0.50" />
      <param name="sensor_model/max_range" type="double" value="100.0" />
      <param name="latch" type="bool" value="false" />
      <remap from="cloud_in" to="/firefly/vi_sensor/camera_depth/depth/points"/>
      <remap from="tf_static" to="/tf"/>
    </node>
  </group>
  <node name="nbvPlanner" pkg="nbvplanner" type="nbvPlanner" output="screen">
    <remap from="pose" to="firefly/odometry_sensor1/pose"/>
    <remap from="nbvplanner" to="firefly/nbvplanner"/>
    <rosparam command="load" file="$(find nbvplanner)/resource/param.yaml" />
  </node>

  <group ns="$(arg mav_name)">
    <include file="$(find rotors_gazebo)/launch/spawn_mav.launch">
      <arg name="mav_name" value="$(arg mav_name)" />
      <arg name="model" value="$(find rotors_description)/urdf/$(arg mav_name)_vi_sensor.gazebo" />
      <arg name="enable_logging" value="$(arg enable_logging)" />
      <arg name="enable_ground_truth" value="$(arg enable_ground_truth)" />
      <arg name="log_file" value="$(arg log_file)"/>
    </include>
    <node name="lee_position_controller_node" pkg="rotors_control" type="lee_position_controller_node" output="screen">
      <rosparam command="load" file="$(find rotors_gazebo)/resource/lee_controller_$(arg mav_name).yaml" />
      <rosparam command="load" file="$(find rotors_gazebo)/resource/$(arg mav_name).yaml" />
      <remap from="odometry" to="odometry_sensor1/odometry" />
    </node>
    <node name="exploration" pkg="nbvplanner" type="exploration" output="screen">
      <rosparam command="load" file="$(find nbvplanner)/resource/param.yaml" />
    </node>
    
  </group>
  
</launch>
